<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>exo-addons-messaging-extension</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main/conf</directory>
      <outputDirectory>/messaging/conf</outputDirectory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/messaging/webapps</outputDirectory>
      <includes>
        <include>org.exoplatform.addons.messaging:exo-addons-messaging-extension-webapp:war</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>messaging-extension.war</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
      <dependencySet>
          <outputDirectory>/messaging/webapps</outputDirectory>
          <includes>
              <include>org.exoplatform.addons.messaging:exo-addons-messaging-portlets-webapp:war</include>
          </includes>
          <scope>provided</scope>
          <outputFileNameMapping>messaging-portlets.war</outputFileNameMapping>
          <useProjectArtifact>false</useProjectArtifact>
      </dependencySet>
      <dependencySet>
          <outputDirectory>/messaging/webapps</outputDirectory>
          <includes>
              <include>org.exoplatform.addons.chat:server:war</include>
          </includes>
          <scope>provided</scope>
          <outputFileNameMapping>chatServer.war</outputFileNameMapping>
          <useProjectArtifact>false</useProjectArtifact>
      </dependencySet>
      <dependencySet>
          <outputDirectory>/messaging/webapps</outputDirectory>
          <includes>
              <include>org.exoplatform.addons.chat:application:war</include>
          </includes>
          <scope>provided</scope>
          <outputFileNameMapping>chat.war</outputFileNameMapping>
          <useProjectArtifact>false</useProjectArtifact>
      </dependencySet>
      <dependencySet>
          <outputDirectory>/messaging/webapps</outputDirectory>
          <includes>
              <include>org.exoplatform.addons.chat:exo-addons-chat-extension:war</include>
          </includes>
          <scope>provided</scope>
          <outputFileNameMapping>chat-extension.war</outputFileNameMapping>
          <useProjectArtifact>false</useProjectArtifact>
      </dependencySet>
    <!-- Libraries -->
    <dependencySet>
      <outputDirectory>/messaging/lib</outputDirectory>
      <includes>
        <include>org.exoplatform.addons.messaging:exo-addons-messaging-extension-config:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/messaging/lib</outputDirectory>
      <includes>
        <include>org.exoplatform.addons.messaging:exo-addons-messaging-api:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
      <dependencySet>
          <outputDirectory>/messaging/lib</outputDirectory>
          <includes>
              <include>org.exoplatform.addons.chat:exo-addons-chat-extension-config:jar</include>
          </includes>
          <scope>provided</scope>
          <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
          <useProjectArtifact>false</useProjectArtifact>
      </dependencySet>
  </dependencySets>
</assembly>